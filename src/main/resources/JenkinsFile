pipeline {
    agent any

environment{
MY_ENV_VAR='some_value'
}

    stages {
        stage('Build') {
            steps {
                // Example: Checkout source code from a Git repository
                git 'https://github.com/ViswanthKumarKS/unit-testing.git'

                // Example: Build your project using Maven
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                // Example: Run unit tests
                sh 'echo "In test step"'
            }
        }
        stage('Deploy') {
            steps {
                // Example: Deploy your application to a server
                sh 'echo "Value of env variable"$""'
            }
        }
    }

    post {
        always {
         
            deleteDir()
        }
        success {
         
            echo 'Pipeline succeeded! ðŸŽ‰'
        }
        failure {
          
            echo 'Pipeline failed! ðŸ˜ž'
        }
    }
}
